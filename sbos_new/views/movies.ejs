            </div>
        </div>
    </section>
    <section class="products" id="products">
        <h1 class="heading"> Latest <span>Releases</span></h1>
        <div class="boxc">

        </div>

        <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
            integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
            crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
            integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
            crossorigin="anonymous"></script>
        <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
        <script>

            axios.get('/getshowinfo', {

            })
                .then(response => {
                    const options = response.data;
                    options.forEach(option => {
                        var newDiv = document.createElement("div");
                        newDiv.classList.add("box");

                        // Create span element with class "discount" and set its content
                        var discountSpan = document.createElement("span");
                        discountSpan.classList.add("discount");
                        discountSpan.textContent = "U/A";

                        // Create div with class "image" and its content
                        var imageDiv = document.createElement("div");
                        imageDiv.classList.add("image");

                        // Create img element and set its source and alt attributes
                        var imgElement = document.createElement("img");
                        imgElement.src = option.mvimg;
                        imgElement.alt = "/assets/image6.jpeg";

                        // Create div with class "icons" and its content
                        var iconsDiv = document.createElement("div");
                        iconsDiv.classList.add("icons");
                        // Create a hidden input field to store the value of the heading element
                        var headingInput = document.createElement("input");
                        headingInput.type = "hidden";
                        headingInput.name = "show";
                        headingInput.value = option.show_;
                        // Create a link with class "cart-btn" and set its content and href
                        var cartBtnLink = document.createElement("a");
                        cartBtnLink.classList.add("cart-btn");
                        cartBtnLink.textContent = "Watch Now";
                        cartBtnLink.onclick = function () {
                            form.submit(); // Trigger the form's action
                        };
                        //cartBtnLink.href = "/mov_time";

                        // Append elements to their respective parent elements
                        iconsDiv.appendChild(cartBtnLink);
                        imageDiv.appendChild(imgElement);
                        imageDiv.appendChild(iconsDiv);

                        // Create div with class "content" and its content
                        var contentDiv = document.createElement("div");
                        contentDiv.classList.add("content");

                        // Create heading element and set its content
                        var headingElement = document.createElement("h3");
                        headingElement.textContent = option.show_;

                        // Create div with class "price" and set its content
                        var priceDiv = document.createElement("div");
                        priceDiv.classList.add("price");
                        priceDiv.textContent = option.rating;

                        // Append elements to their respective parent elements
                        contentDiv.appendChild(headingElement);
                        contentDiv.appendChild(priceDiv);

                        // Append elements to the main div
                        newDiv.appendChild(discountSpan);
                        newDiv.appendChild(imageDiv);
                        newDiv.appendChild(contentDiv);
                        var form = document.createElement("form");

                        form.action = "/mov";
                        form.method = "post";
                        form.appendChild(headingInput);
                        // Append the dynamic div to the form
                        form.appendChild(newDiv);
                        // Append the new div to the "product" section
                        document.querySelector(".boxc").appendChild(form);

                    });
                })
                .catch(error => {
                    console.error('Error: ', error);
                });

        </script>
    </section>

</body>

