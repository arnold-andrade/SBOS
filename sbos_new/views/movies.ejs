        <div class="logo">
            <a href="#" class="logo"><i class="far fa-heart"></i></a>
            <a href="/userprofile" class="logo"><i class="fas fa-user"></i></a>


        </div>

    </header>
    <section class="pos">

        <div class="slideshow mid">
            <div class="slides">
                <input type="radio" name="r" id="r1" checked>
                <input type="radio" name="r" id="r2">
                <input type="radio" name="r" id="r3">
                <input type="radio" name="r" id="r4">
                <input type="radio" name="r" id="r5">
                <div class="slide s1"><img src="/assets/mp.webp" alt=""></div>
                <div class="slide"><img src="/assets//mp2.jpg" alt=""></div>
                <div class="slide"><img src="/assets/mp3.jpg" alt=""></div>
                <div class="slide"><img src="/assets/mp4.jpg" alt=""></div>
                <div class="slide"><img src="/assets/mp5.jpg" alt=""></div>
            </div>


            <div class="nav">
                <label for="r1" class="bar"></label>
                <label for="r2" class="bar"></label>
                <label for="r3" class="bar"></label>
                <label for="r4" class="bar"></label>
