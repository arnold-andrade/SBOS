<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Venue Provider Home</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-image: url("");
        }

        header {
            background-color: #e0115f;
            color: #fff;
            text-align: center;
            padding: 20px;
        }

        header .strip {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 20px;
        }

        header .strip .logo {
            display: flex;
            align-items: center;
        }

        header .strip .logo img {
            width: 50px;
            height: 50px;
            margin-right: 10px;
        }

        header .strip .buttons {
            display: flex;
            align-items: center;
        }

        header .strip .button {
            background: none;
            border: none;
            color: #fff;
            cursor: pointer;
            margin-right: 20px;
        }

        /* Add hover effect for the buttons */
        .button:hover {
            background-color: #ff347f;
            box-shadow: 0 0 10px #ff347f;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        .form-container {
            display: none;
            margin: 20px 0;
            padding: 20px;
            border: 2px solid rgba(255, 255, 255, 0.5);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.75);
            border-radius: 20px;
            background-color: transparent;
            backdrop-filter: blur(20px);
        }

        .form-container h2 {
            color: #e0115f;
            text-align: center;
        }

        .form-container label {
            display: block;
            margin: 10px 0;
        }

        .form-container input[type="text"],
        .form-container textarea {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid #e0115f;
            border-radius: 5px;
        }

        .form-container input[type="text"]:focus,
        .form-container textarea:focus {
            border-color: #000;
        }

        .form-container button {
            background-color: #e0115f;
            color: white;
            border: none;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Add hover effect for the "Upload Venue" button */
        .butt:hover {
            background-color: #ff347f;
            box-shadow: 0 0 10px #ff347f;
        }
    </style>
</head>

<body>
    <header>
        <div class="strip">
            <div class="logo">
                <img src="/assets/ds.jpeg" alt="Logo"> <!-- Replace 'your-logo.png' with your logo image -->
            </div>
            <div class="buttons">
                <button class="button" onclick="toggleContent('home-content')">Home</button>
                <button class="button" onclick="toggleContent('requests-content')">Requests</button>
            </div>
        </div>
    </header>

    <div class="container">
        <!-- Add a New Venue Content Section -->
        <div id="home-content" class="form-container">
            <h2>Add a New Venue</h2>

            <label for="venueId">Venue ID:</label>
            <input type="text" id="venueID" name="venueID" required>

            <label for="venueName">Venue Name:</label>
            <input type="text" id="venueName" name="venueName" required>

            <label for="costPerDay">Cost per Day:</label>
            <input classname="namebox" type="text" id="costPerDay" name="costPerDay" required>

            <label for="cap">Capacity :</label>
            <input classname="namebox" type="text" id="cap" name="cap" required>

            <label for="location">Location:</label>
            <input classname="namebox" type="text" id="location" name="location" required>

            <label for="description">Description:</label>
            <textarea classname="namebox" id="description" name="description" required></textarea>

            <label for="image1">Image 1:</label>
            <input classname="namebox" type="file" id="image1" name="image1" accept="image/*" multiple
            
                onchange="showname()" required>

            <!-- <label for="image2">Image 2:</label>
                <input classname="namebox" type="file" id="image2" name="image2" accept="image/*" required> -->

            <button class="butt" onclick="fn1()">Upload Venue</button>
            <label id="add"></label>

        </div>

        <!-- Venues Content Section -->
        <div id="venues-content" class="form-container">
            <!-- Content related to Venues -->
        </div>

        <!-- Profile Content Section -->
        <div id="profile-content" class="form-container">
            <!-- Content related to Profile -->
        </div>

        <!-- Requests Content Section -->
        <div id="requests-content" class="form-container">
            <h2>Requests</h2>
            <!-- Add content related to requests here -->
        </div>
    </div>

    <script>
        function toggleContent(id) {
            const contentElements = document.querySelectorAll('.form-container');
            contentElements.forEach((element) => {
                element.style.display = 'none';
            });
            document.getElementById(id).style.display = 'block';
        }

    </script>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
        integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"
        integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"
        integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy"
        crossorigin="anonymous"></script>
    <script src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>

        var fileInput = document.getElementById("image1");
        var add = document.getElementById('add');
        var fileName;
        function fn1() {
            var vid = document.getElementById('venueID').value;
            var vn = document.getElementById('venueName').value;
            var cost = document.getElementById('costPerDay').value;
            var cap = document.getElementById('cap').value;
            var loc = document.getElementById('location').value;
            var des = document.getElementById('description').value;
            axios.get('/insven', {
                params: {
                    vid: vid,
                    vn: vn,
                    cost: cost,
                    cap: cap,
                    loc: loc,
                    des: des,
                    fp: '/assets/' + fileName.trim()
                }
            })
                .then(response => {
                    add.innerHTML = "added!"
                })
                .catch(error => {
                    console.error('Error :', error);
                });
        }
        function showname() {
            var name = document.getElementById('image1');
            fileName = name.files.item(0).name;
        };
    </script>
</body>

</html>